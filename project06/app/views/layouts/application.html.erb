<!DOCTYPE html>
<html>
<head>
  	<title>Gamez</title>
  	<%= stylesheet_link_tag    "application", :media => "all" %>
  	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>
</head>
<body>
	
	<div id="user_nav">
		<% if current_user %>
			Logged in as <%= link_to "#{current_user.first_name} #{current_user.last_name}", edit_user_path(UserSession.find.user) %>
			<%= link_to "Logout", logout_path %>
		<% else %>
			<%= link_to "Login", login_path %>
			<%= link_to "Register", new_user_path %>
		<% end %>
	</div>

	<%= yield %>

</body>
</html>
