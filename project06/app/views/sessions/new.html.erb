<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %>
<% end %>

<%= form_tag do %>
	<fieldset>
		<legend>Please Log In</lengend>
			
		<div>
			<%= label_tag :username, 'Username:' %>
			<%= text_field_tag :username, params[:username] %>
		</div>
		
		<div>
			<%= label_tag :password, 'Password:' %>
			<%= password_field_tag :password, params[:password] %>
		</div>
		
		<div>
			<%= submit_tag "Login" %>
		</div>
	</fieldset>
<% end %>
