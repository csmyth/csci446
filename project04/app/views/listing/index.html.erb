<% if notice %>
	<p id="notice"><%= notice %>
<% end %>

<div class="banner">	
	<h1>Articl.es</h1>
	<h5>...with a name .com hipsters love!</h5>
</div>

<div class="page_header">
	<h2>All the World's Articles</h2>
	<div class="create">
		<% #replace with link %>
		Create an Article
	</div>
</div>

<div class="content">
	<table>
	  <tr>
	    <th>Title</th>
	    <th>Author Name</th>
	    <th>Body</th>
	    <th>Creation Date</th>
	  </tr>
	
	<% @articles.each do |article| %>
	  <tr class="<%= cycle('list_line_even', 'list_line_odd') %>">
	    <td><%= article.title %></td>
	    <td><%= article.author %></td>
	    <td><%= truncate(strip_tags(article.body), length: 40) %></td>
	    <td><%= article.creation_date %></td>
	    <td class="button"><%= link_to 'Show', article %></td>
	    <td class="button"><%= link_to 'Edit', edit_article_path(article) %></td>
	    <td class="button"><%= link_to 'Destroy', article, confirm: 'Are you sure?', method: :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>
</br>

<div class="count">
	<%= article_count(@articles.count) %>
</div>
