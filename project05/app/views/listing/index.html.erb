<% content_for :subtitle do %>
	...with a name .com hipsters love!
<% end %>

<% if notice %>
	<p id="notice"><%= notice %>
<% end %>


<h2>All the World's Articles
	<span id="spannav">
		<%= link_to image_tag("add.png"), new_article_path %>
		<%= link_to 'Create an Article', new_article_path %>
	</span>
</h2>

<table id="article_content">
  <thead>
	  <tr>
	    <th>Title</th>
	    <th>Author Name</th>
	    <th>Body</th>
	    <th>Creation Date</th>
	  </tr>
  </thead>
  
  <tbody>
	<% @articles.each do |article| %>
	  <tr class="<%= cycle('list_line_even', 'list_line_odd') %>">
	    <td><%= article.title %></td>
	    <td><%= article.author %></td>
	    <td><%= truncate(strip_tags(article.body), length: 40) %></td>
	    <td><%= article.creation_date %></td>
	    <td class="button"><%= link_to image_tag("find.png"), article %>
	    		<%= link_to image_tag("page_edit.png"), edit_article_path(article) %>
	    		<%= link_to image_tag("delete.png"), article, confirm: 'Are you sure?', method: :delete %>
	    </td>
	  </tr>
	<% end %>
  </tbody>
  
  <tfoot>
  	<tr>
  		<td colspan="5">
  			<p><%= article_count(@articles.count) %></p>
  		</td>
  	</tr>
  </tfoot>
</table>
<br />
